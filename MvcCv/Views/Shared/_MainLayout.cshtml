            </ul>
        </div>
    </nav>

    @RenderBody()

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/Templates/ResumeCV-Template/js/scripts.js"></script>
</body>
</html>
